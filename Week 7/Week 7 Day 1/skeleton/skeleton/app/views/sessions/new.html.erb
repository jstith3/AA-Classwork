<h1> Log In </h1>

<form action="<%= sessions_url %>" method="POST"> 
    <label for="user_name">Username:</label>
    <input id='user_name'
        type="text"
        name="user[user_name]"
        value="<%= @user ? @user.user_name : "" %>"
    >

    <label for="password">Password:</label>
    <input id='password'
        type="text" 
        name="user[password]" 
        value=""
    >

    <input type="submit" value="Log In">
</form>